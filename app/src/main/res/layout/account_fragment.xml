<!--                android:tint="?attr/color"/>-->

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/outputStack">

        <ImageButton
            android:id="@+id/settingsButtonFromAccount"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:clipToPadding="true"
            android:background="@drawable/radius"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:elevation="5dp"
            android:padding="10dp"
            android:src="@drawable/ic_settings_24px"
            android:tint="@color/NNTUblue"/>

        <Button
            android:id="@+id/outButton"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/radius"
            android:layout_marginStart="10dp"
            android:clickable="true"
            android:clipToPadding="true"
            android:elevation="5dp"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:padding="10dp"
            android:text="@string/Выйти"
            android:textColor="@color/lighterNNTUred" />

        <ImageButton
            android:id="@+id/editButton"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:clipToPadding="true"
            android:background="@drawable/radius"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:elevation="5dp"
            android:padding="10dp"
            android:src="@drawable/ic_edit_24px"
            android:tint="@color/NNTUblue"/>





    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>