<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:autofit="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.settings"
    android:clipChildren="false">

    <TextView
        android:id="@+id/warningLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alpha="0"
        android:text="@string/Не_все_поля_заполнены"
        android:textColor="@color/NNTUred"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/inputStack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/radius"
        android:elevation="5dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/warningLabel">

        <EditText
            android:id="@+id/secondNameField"
            style="@style/Widget.AppCompat.EditText"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:background="@drawable/radius"
            android:ems="10"
            android:hint="@string/Фамилия"
            android:inputType="textCapWords" />

        <EditText
            android:id="@+id/nameField"
            style="@style/Widget.AppCompat.EditText"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:background="@drawable/radius"
            android:ems="10"
            android:hint="@string/Имя"
            android:inputType="textCapWords" />

        <EditText
            android:id="@+id/OtchField"
            style="@style/Widget.AppCompat.EditText"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:background="@drawable/radius"
            android:ems="10"
            android:hint="@string/Отчество"
            android:inputType="textCapWords" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="5dp"
            android:gravity="end"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/nstudField"
                android:layout_width="match_parent"
                android:layout_marginStart="140dp"
                android:layout_height="match_parent"
                android:background="@drawable/radius"
                android:hint="@string/Номер_студенческого"
                android:inputType="number" />

            <EditText
                android:id="@+id/groupField"
                android:layout_width="110dp"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/radius"
                android:hint="@string/Группа"
                android:inputType="textPersonName" />

        </LinearLayout>
    </LinearLayout>



    <Button
        android:id="@+id/enterButton"
        android:clipToPadding="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/radius"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:elevation="5dp"
        android:padding="10dp"
        android:text="@string/Войти"
        android:layout_marginTop="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inputStack" />

    <LinearLayout
        android:id="@+id/outputStack"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:orientation="vertical"
        android:background="@drawable/radius"
        android:elevation="7dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="10dp">

            <me.grantland.widget.AutofitTextView
                android:id="@+id/outputSecondName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:fontFamily="sans-serif-black"
                android:gravity="center_vertical"
                android:text="Шерстнев"
                android:textColor="?attr/color"
                android:textSize="45sp"
                android:maxLines="1"
                autofit:minTextSize="20sp"/>

            <me.grantland.widget.AutofitTextView
                android:id="@+id/outputName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:fontFamily="sans-serif-black"
                android:gravity="center_vertical"
                android:text="Алексей"
                android:textColor="?attr/color"
                android:textSize="45sp"
                android:maxLines="1"
                autofit:minTextSize="20sp"/>

            <me.grantland.widget.AutofitTextView
                android:id="@+id/outputOtchestvo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="5dp"
                android:fontFamily="sans-serif-black"
                android:gravity="center_vertical"
                android:text="Сергеевич"
                android:textColor="?attr/color"
                android:textSize="45sp"
                android:maxLines="1"
                autofit:minTextSize="20sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:id="@+id/nstudLinearLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:fontFamily="sans-serif"
                        android:gravity="center_vertical"
                        android:text="@string/Номер_билета"
                        android:textColor="?attr/color"
                        android:textSize="15dp" />
                    <me.grantland.widget.AutofitTextView
                        android:id="@+id/outputNstud"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:fontFamily="sans-serif-medium"
                        android:gravity="center_vertical"
                        android:text="20-04271"
                        android:textColor="?attr/color"
                        android:textSize="30dp"
                        android:maxLines="1"
                        autofit:minTextSize="15sp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/uselessGroupLabel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:fontFamily="sans-serif"
                        android:gravity="center_vertical"
                        android:text="@string/Группа_"
                        android:textColor="?attr/color"
                        android:textSize="15dp" />
                    <me.grantland.widget.AutofitTextView
                        android:id="@+id/outputGroup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:fontFamily="sans-serif-medium"
                        android:gravity="center_vertical"
                        android:text="18-САИ-1"
                        android:textColor="?attr/color"
                        android:textSize="30dp"
                        android:maxLines="1"
                        autofit:minTextSize="15sp"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>




    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="70dp"
        android:orientation="vertical"
        android:gravity="center"
        android:clipChildren="false"
        android:clipToPadding="false">



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:clipChildren="false"
            android:clipToPadding="false">

